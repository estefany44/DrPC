<%= simple_form_for(appointment) do |t| %>
  <%= t.input :description, required: true, label: 'Ingresa una breve descripción de tu problema ' %>
  <%= t.input :start_date, label: 'Fecha de atención', required: true, as: :string, input_html: {type: :date} %>
  <%= t.input :time, label: 'Hora de atención', required: true, collection: ['9:00hs', '10:00hs', '11:00hs', '14:00hs', '15:00hs', '16:00hs'] %>
  <% if current_user.client == false %>
  <%= t.input :status, label: 'Estado', collection: ['Pendiente', 'Confirmada', 'Cancelada']%>
  <% end %>
  <%= t.submit "Guardar", :class => 'guardar' %>
<% end %>
