<%= simple_form_for(appointment) do |t| %>
<%= t.index  %>
<%= t.input :description, required: true %>
<%= t.input :start_date, required: true, as: :string, input_html: {type: :date} %>
<%= t.input :time, required: true, collection: ['9:00hs', '10:00hs', '11:00hs', '14:00hs', '15:00hs', '16:00hs'] %>
<%= t.input :status %>
<%= t.submit "guardar", :class => 'guardar' %>
<% end %>

