<div class="container-sm py-5">
    <h4><strong>Listado de Reservas</strong></h4> <p>| User: <%= current_user.first_name %> |</p>
    <div class="table-responsive-sm">
     <table class="table table-striped table-hover table-responsive-sm">
        <thead class="thead-dark">
         <tr>
           <th>Nº Cita</th>
           <th>Descripción</th>
           <th>Estado</th>
           <th>Email del cliente</th>
           <th>Fecha</th>
           <th></th>
          <th></th>
         </tr>
        </thead>
        <tbody>
          <% @appointments.each do |a| %>
            <tr>
              <th><%= a.id %></th>
              <td><%= a.description %></td>
              <td><%= a.status %></td>
              <td><%= a.user.email%></td>
              <td>
                <%if a.start_date != nil %>
                  <%= a.start_date.strftime("%d-%B-%Y") %>
                <% end %>
              </td>
              <td><%= button_to "Detalle", appointment_path(a), class:"btn btn-primary ", :method => :get %></td>

              <td><% if current_user.client == false %><%= button_to "Crear OT", new_order_path(a), class:"btn btn-primary ", :method => :get %><% end %></td>

            </tr>
          <% end %>
        </tbody>
    </table>
</div>

