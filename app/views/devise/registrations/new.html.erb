<div class="row">
  <div class="col-md-6">
    <h2 class="pb-4"><%= t('.sign_up') %></h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="mb-3">
	<%= f.imput :email%>
	<%= f.imput :first_name%>
	<%= f.imput :last_name%>
	<%= f.imput :rut%>
	<%= f.imput :address%>
	<%= f.imput :phone%>
      </div>


      <div class="mb-3">
	<%= f.button :submit, "sign up" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
