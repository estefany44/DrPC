<%= simple_form_for(order) do |f| %>
  <%= f.input :diagnostic %>
  <%= f.input :solution %>
  <%= f.input :price %>
  <%= f.input :delivery_date, as: :string, input_html: {type: :date}%>
  <%= f.input :status, collection: ['En Proceso','Terminada','Cancelada']%>
  <%= f.association :appointment, :collection => Appointment.where(:status=> 'CONFIRMADA'), label_method: :id, value_method: :id %>
  <%= f.submit "Guardar", :class => 'guardar' %>
<% end %>
