<div class="container-sm py-5">
    <h4><strong>Listado de Ordenes de Trabajo OT</strong></h4> <p>| User: <%= current_user.first_name %> |</p>
  <div class="table-responsive-sm">
    <table class="table table-striped table-hover table-responsive-sm">
      <thead class="thead-dark">
        <tr>
          <th>NÂº OT</th>
          <th>Diagnostico</th>
          <th>Status</th>
          <th>Fecha Ingreso</th>
          <th>Fecha Entrega</th>
          <th> </th>
          <th> </th>
      </tr>
      </thead>
      <tbody>
        <% @orders.each  do |ot| %>
          <tr>
            <th scope="row"><%= ot.id %></th>
            <td><%= ot.diagnostic %></td>
            <td><%= ot.status %></td>
            <td><%= ot.status %></td>
            <td>
                <%if ot.delivery_date != nil %>
                  <%= ot.delivery_date.strftime("%d-%B-%Y") %>
                <% end %>
              </td>
            <td><% if current_user.client == false %><%= button_to "Editar", edit_order_path(ot), class:"btn btn-primary ", :method => :get %> <% end %></td>
            <td><%= button_to "Estatus", order_path(ot), class:"btn btn-primary", :method => :get %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>




